@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table class="table table-striped">
    <tr>
        <th>Movies</th>
    </tr>

    @foreach (var movie in Model)
    {
        <tr>
            <td><a href="@Url.Action("Details", "Movies", new { id = movie.id })">@movie.name</a></td>
        </tr>
    }

</table>

